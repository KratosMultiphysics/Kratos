{
    "problem_data": {
        "parallel_type": "OpenMP",
        "echo_level": 0
    },
    "model_parts": [
        {
            "settings": {
                "model_part_name": "shell",
                "domain_size": 3,
                "input_filename": "shell"
            }
        }
    ],
    "analyses": [
        {
            "name": "shell_static",
            "type": "stepping_analysis_execution_policy",
            "settings": {
                "model_part_names": [
                    "shell"
                ],
                "analysis_module": "KratosMultiphysics.StructuralMechanicsApplication",
                "analysis_type": "StructuralMechanicsAnalysis",
                "analysis_settings": {
                    "@include_json": "primal_parameters.json"
                }
            }
        }
    ],
    "responses": [
        {
            "name": "mass_shell",
            "type": "mass_response_function",
            "settings": {
                "evaluated_model_part_names": [
                    "shell"
                ]
            }
        },
        {
            "name": "strain_energy_shell",
            "type": "linear_strain_energy_response_function",
            "settings": {
                "evaluated_model_part_names": [
                    "shell"
                ],
                "primal_analysis_name": "shell_static"
            }
        }
    ],
    "controls": [
        {
            "name": "thickness_control",
            "type": "thickness.shell_thickness_control",
            "settings": {
                "controlled_model_part_names": [
                    "shell"
                ],
                "filter_settings": {
                    "type": "implicit",
                    "radius": 0.2,
                    "linear_solver_settings": {
                        "solver_type": "LinearSolversApplication.pardiso_lu"
                    }
                },
                "initial_thickness": 0.1,
                "fixed_model_parts": [
                    "shell.top_edge"
                ],
                "fixed_model_parts_thicknesses": [
                    0.2
                ]
            }
        }
    ],
    "algorithm_settings": {
        "type": "algorithm_steepest_descent",
        "settings": {
            "echo_level": 0,
            "line_search": {
                "type": "const_step",
                "init_step": 0.001,
                "gradient_scaling": "inf_norm"
            },
            "conv_settings": {
                "type": "max_iter",
                "max_iter": 2
            }
        },
        "controls": [
            "thickness_control"
        ],
        "objective": {
            "response_name": "strain_energy_shell",
            "type": "minimization",
            "scaling": 1.0
        }
    },
    "processes": {
        "kratos_processes": {},
        "optimization_data_processes": {
            "output_processes": [
                {
                    "type": "optimization_problem_ascii_output_process",
                    "module": "KratosMultiphysics.OptimizationApplication.processes",
                    "settings": {
                        "output_file_name": "summary.csv",
                        "write_kratos_version": false,
                        "write_time_stamp": false
                    }
                },
                {
                    "type": "optimization_problem_vtu_output_process",
                    "module": "KratosMultiphysics.OptimizationApplication.processes",
                    "settings": {
                        "file_format": "binary",
                        "write_deformed_configuration": false,
                        "list_of_output_components": [
                            "control.thickness_control"
                        ],
                        "output_precision": 7,
                        "output_interval": 1,
                        "echo_level": 0
                    }
                }
            ]
        }
    }
}