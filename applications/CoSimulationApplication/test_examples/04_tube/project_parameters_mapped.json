{
    "settings" :
    {
        "echo_level" : 1,
        "start_step" : 1,
        "stop_step" : 101,
        "data_structure" : "pyKratos"
    },
    "coupled_solver" :
    {
        "type" : "coupled_solvers.iqni",
        "settings" :
        {
            "echo_level" : 1,
            "omega" : 0.05,
            "relative_tolerance_gmres": 1e-15,
            "model" :
            {
                "type": "coupled_solvers.models.ls",
                "settings":
                {
                    "min_significant": 1e-12,
                    "q": 10
                }
            }
        },
        "predictor" :
        {
            "type" : "predictors.linear"
        },
        "convergence_criterion" :
        {
            "type" : "convergence_criteria.or",
            "settings" :
            {
                "convergence_criterion0" :
                {
                    "type": "convergence_criteria.iteration_limit",
                    "settings":
                    {
                        "maximum": 10
                    }
                },
                "convergence_criterion1" :
                {
                    "type" : "convergence_criteria.relative_norm",
                    "settings" :
                    {
                        "tolerance" : 1e-6,
                        "order" : 2
                    }
                }
            }
        },
        "solver_wrappers" :
        [
            {
                "type" : "solver_wrappers.pipe.flow_solver",
                "settings" :
                {
                    "working_directory" : "CFD",
                    "input_file"  : "solver_parameters.json",
                    "interface_input" :
                    {
                        "wall": "AREA"
                    },
                    "interface_output" :
                    {
                        "wall" : "PRESSURE"
                    }
                }
            },
            {
                "type": "solver_wrappers.mapped",
                "settings": {
                    "solver_wrapper" :
                    {
                        "type" : "solver_wrappers.pipe.structure_solver",
                        "settings" :
                        {
                            "working_directory" : "CSD",
                            "input_file"  : "solver_parameters.json",
                            "interface_input" :
                            {
                                "wall" : "PRESSURE"
                            },
                            "interface_output" :
                            {
                                "wall": "AREA"
                            }
                        }
                    },
                    "mapper_interface_input":
                    {
						"type" : "mappers.interface",
						"settings" :
						{
	                        "type": "mappers.linear",
                            "settings":
                            {
                                "directions" : ["Z"],
                                "balanced_tree" : false,
                                "parallel" : true
                            }
						}
                    },
                    "mapper_interface_output":
                    {
						"type" : "mappers.interface",
						"settings" :
						{
	                        "type": "mappers.linear",
                            "settings":
                            {
                                "directions" : ["Z"],
                                "balanced_tree" : false,
                                "parallel" : true
                            }
						}
                    }
                }
            }
        ]
    }
}
