file	problemtype.bas
where	*# Conditional Variable blocks

*if(CondNumEntities > 0)
*# Check if some node has its X value set
*set var Xset=0
*loop nodes *OnlyInCond
*if(cond(<NAME>_X,int)==1)
*set var Xset=1
*endif
*end nodes
*if(Xset == 1)
Begin ConditionalData <NAME>_X
*loop nodes *OnlyInCond
*if(cond(<NAME>_X,int)==1)
*format "%i%f"
*NodesNum *cond(X_Value)
*endif
*end nodes
End ConditionalData

*endif
*#
*# Check if some node has its Y value set
*set var Yset=0
*loop nodes *OnlyInCond
*if(cond(<NAME>_Y,int)==1)
*set var Yset=1
*endif
*end nodes
*if(Yset == 1)
Begin ConditionalData <NAME>_Y
*loop nodes *OnlyInCond
*if(cond(<NAME>_Y,int)==1)
*format "%i%f"
*NodesNum *cond(Y_Value)
*endif
*end nodes
End ConditionalData

*endif
*#
*# Check if some node has its Z value set
*set var Zset=0
*loop nodes *OnlyInCond
*if(cond(<NAME>_Z,int)==1)
*set var Zset=1
*endif
*end nodes
*if(Zset == 1)
Begin ConditionalData <NAME>_Z
*loop nodes *OnlyInCond
*if(cond(<NAME>_Z,int)==1)
*format "%i%f"
*NodesNum *cond(Z_Value)
*endif
*end nodes
End ConditionalData
*endif

*endif
