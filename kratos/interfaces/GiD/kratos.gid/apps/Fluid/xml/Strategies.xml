<?xml version="1.0" encoding="UTF-8"?>
<StrategyList>
  <StrategyItem n="FractionalStep" pn="Navier Stokes - Fractional Step" 
		ImplementedInFile="navier_stokes_solver_fractionalstep.py"
		ImplementedInApplication="FluidDynamicsApplication"
		ImplementedInPythonFile="navier_stokes_solver_fractionalstep"
		MinimumKratosVersion="8500"
		ProductionReady="true"
		help="">
    
    <!-- list of options to be filled -->
    <parameter_list>
	  <parameter n="predictor_corrector" pn="Predictor corrector" type="bool" v="False" help=""/>  
	  <parameter n="maximum_velocity_iterations" pn="Maximum velocity iterations" type="integer" v="4" help=""/>  
	  <parameter n="maximum_pressure_iterations" pn="Maximum pressure iterations" type="integer" v="4" help=""/>  
	  <parameter n="velocity_tolerance" pn="velocity tolerance" type="double" v="1e-3" help=""/>  
	  <parameter n="pressure_tolerance" pn="pressure tolerance " type="double" v="1e-3" help=""/>  
	  <parameter n="echo_level" pn="echo_level" type="int" v="1" help=""/>  
	  <parameter n="consider_periodic_conditions" pn="consider periodic conditions " type="bool" v="false" help=""/>  
          <parameter n="time_order" pn="time order " type="int" v="2" help=""/>  
          <parameter n="dynamic_tau" pn="dynamic_tau" type="double" v="0.001" help=""/>  
	  <parameter n="compute_reactions" pn="compute reactions" type="bool" v="false" help=""/>  
          <parameter n="divergence_clearance_steps" pn="divergence_clearance_steps " type="int" v="0" help=""/>  
          <parameter n="reform_dofs_at_each_iteration" pn="reform dofs at each iteration " type="bool" v="false" help=""/>           
    </parameter_list>
    
    <linearSolvers>
      <linearSolverItem n="velocity_linear_solver_settings" pn="Velocity linear solver" default="AMGCL">
        <filterFeatures>
	  <!--<filter field="n" value="BiConjugate"/>
	      <filter field="symmetric" value="false"/>
              <filter field="solver_type" value="Iterative"/>    -->
        </filterFeatures>
      </linearSolverItem>
	  
      <linearSolverItem n="pressure_linear_solver_settings" pn="Pressure linear solver" >
        <filterFeatures>
        </filterFeatures>
      </linearSolverItem> 
    </linearSolvers>
	
	<schemes>
	  <scheme n="FS" pn="Fractional step generic scheme" help="FilterElements">
	     <parameter_list>
		  </parameter_list>
  		  <element_filters>
			 <filter field="n" value="FractionalStep2D,FractionalStep3D"/>
		  </element_filters>
	  </scheme>
	</schemes>
  
  </StrategyItem>
  <StrategyItem n="Monolithic" pn="Monolithic" 
		ImplementedInFile="mechanical_strategy.cpp"
		ImplementedInApplication="SolidMechanicsApplication"
		ImplementedInPythonFile="mechanical_solver"
		MinimumKratosVersion="8500"
		ProductionReady="true"
		help="">
    
    <!-- list of options to be filled -->
    <parameter_list>
	  <parameter n="MaximumIterations" pn="Maximum iterations" type="integer" v="10" values="" help=""/>  
	  <parameter n="DynamicTau" pn="Use dt in stabilization" type="combo" v="0.01" values="1.0,0.1,0.01,0.001,0.0" help=""/>  
	  <parameter n="OssSwitch" pn="Use orthogonal subscales" type="bool" v="True" help=""/> 
    </parameter_list>
    
    <linearSolvers>
      <linearSolverItem n="linear_solver_config" pn="Linear Solver" >
        <filterFeatures>
	  <!--<filter field="n" value="BiConjugate"/>
	      <filter field="symmetric" value="false"/>
              <filter field="solver_type" value="Iterative"/>    -->
        </filterFeatures>
      </linearSolverItem>     
    </linearSolvers>
	
	<schemes>
	  <scheme n="MN" pn="Monolitic generic scheme" help="FilterElements">
	     <parameter_list>
		  </parameter_list>
  		  <element_filters>
			 <filter field="n" value="Monolithic2D,Monolithic3D"/>
		  </element_filters>
	  </scheme>
	</schemes>
  
  </StrategyItem>
</StrategyList>
