## list of files to be build, including dependencies to other libraries
import python ;
python-extension KratosMultibodyApplication
    :  
	#list of sources
	add_custom_processes_to_python.cpp
	kratos_multibody_application.cpp
	kratos_multibody_python_application.cpp

    /KratosProject//libkratos_static

    /KratosProject//libomp
    	 
	/KratosProject//pythonlib
	/KratosProject//boost_python_lib
    ;

#################################################################################
#################################################################################
## rules to install ... and to remove the prefix "lib"

install install : KratosMultibodyApplication : <location>$(TOP)/libs ;

